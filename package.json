{
	"name": "web-components-builder",
	"private": true,
	"version": "1.142.1",
	"type": "module",
	"scripts": {
		"config-prepare": "tsx ./vite.tools.config.ts --mode=production",
		"start": "yarn config-prepare && concurrently 'tsx ./vite.full.config.ts --mode=develop' 'yarn storybook' 'yarn analyze:watch'",
		"dev": "yarn start",
		"build": "rm -rf package/dist package/tools && yarn config-prepare && yarn analyze && tsx ./vite.full.config.ts --mode=production && yarn sass --verbose ./src/shared/styles/main.scss ./package/dist/styles/main.css && cp ./package/dist/styles/main.css ./package/tools/styles/main.css && yarn build:list-exports",
		"build:list-exports": "node ./listExports.cjs",
		"lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:{eslint,css,fmt}'",
		"lint:eslint": "eslint src --fix",
		"lint:fmt": "prettier --check --log-level=warn .",
		"lint:css": "stylelint \"**/*.{scss,css}\"",
		"lint:fmt:fix": "prettier --write .",
		"lint:types": "tsc --noEmit --project tsconfig.json",
		"analyze": "cem analyze --litelement --outdir ./package --globs 'src/**/index.ts' --exclude 'src/**/*.stories.ts'",
		"analyze:watch": "cem analyze --litelement --outdir ./package --globs 'src/**/index.ts' --exclude 'src/**/*.stories.ts' --watch",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "yarn build && storybook build",
		"test-storybook": "yarn config-prepare && test-storybook",
		"test:components": "yarn analyze && yarn config-prepare && yarn build && yarn build-storybook && concurrently -k -s first -n 'SB,TEST' -c 'magenta,blue' 'http-server storybook-static --port 6007' 'wait-on -v tcp:127.0.0.1:6007 && yarn test-storybook --url http://127.0.0.1:6007'",
		"test": "vitest",
		"test:ci": "vitest run",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{ts,js,vue}": [
			"prettier --list-different",
			"eslint"
		],
		"*.json": "prettier --list-different",
		"*.ya?ml": "prettier --list-different",
		"*.{scss,css,vue}": [
			"prettier --list-different",
			"stylelint"
		]
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"ethereum-blockies-base64": "^1.0.2",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1",
		"tippy.js": "^6.3.7",
		"tsx": "^4.19.4",
		"viem": "^2.31.7",
		"web3-utils": "^4.3.3"
	},
	"devDependencies": {
		"@babel/preset-react": "^7.27.1",
		"@custom-elements-manifest/analyzer": "^0.10.4",
		"@lit-labs/motion": "^1.0.8",
		"@storybook/addon-controls": "^7.6.20",
		"@storybook/addon-essentials": "^7.6.20",
		"@storybook/addon-interactions": "^7.6.20",
		"@storybook/addon-links": "^7.6.20",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/blocks": "^7.6.20",
		"@storybook/builder-vite": "^7.6.20",
		"@storybook/client-api": "^7.6.20",
		"@storybook/jest": "^0.2.3",
		"@storybook/preset-scss": "^1.0.3",
		"@storybook/test-runner": "^0.22.0",
		"@storybook/testing-library": "^0.2.2",
		"@storybook/web-components-vite": "^7.6.20",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.1.2",
		"dompurify": "^3.2.6",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.10.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-lit": "^1.15.0",
		"espree": "^10.3.0",
		"http-server": "^14.1.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"list-exports": "^1.1.0",
		"lit": "^3.3.0",
		"lit-analyzer": "^2.0.3",
		"lit-html": "^3.3.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.4",
		"prettier": "^3.5.3",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"renamer": "^5.0.2",
		"sass": "^1.89.2",
		"storybook": "7.6.20",
		"storybook-addon-designs": "^7.0.0-beta.2",
		"stylelint": "^15.11.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-standard-scss": "^11.1.0",
		"stylelint-prettier": "^4.1.0",
		"tailwindcss": "^3.4.17",
		"tinycolor2": "^1.6.0",
		"typescript": "^5.8.3",
		"typescript-bundle": "^1.0.18",
		"vite": "^6.3.5",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-external": "^6.2.2",
		"vite-plugin-static-copy": "^3.0.0",
		"vitest": "^2.1.9",
		"wait-on": "^8.0.3",
		"yargs": "^18.0.0"
	},
	"packageManager": "yarn@3.3.1",
	"workspaces": [
		"./package"
	]
}
