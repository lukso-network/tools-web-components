{
  "name": "web-components-builder",
  "private": true,
  "version": "1.26.1",
  "type": "module",
  "scripts": {
    "config-prepare": "ts-node-esm ./vite.tools.config.ts --mode=production",
    "start": "yarn config-prepare && concurrently 'ts-node-esm ./vite.full.config.ts --mode=develop' 'yarn storybook' 'yarn analyze:watch'",
    "dev": "yarn start",
    "build": "rm -rf package/dist package/tools && yarn config-prepare && yarn analyze && ts-node-esm ./vite.full.config.ts --mode=production && yarn sass --verbose ./src/shared/styles/main.scss ./package/dist/styles/main.css && cp ./package/dist/styles/main.css ./package/tools/styles/main.css && yarn build:list-exports",
    "build:list-exports": "node ./listExports.cjs",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:{eslint,css,fmt}'",
    "lint:eslint": "eslint src --fix",
    "lint:fmt": "prettier --check --loglevel=warn .",
    "lint:css": "stylelint \"**/*.{scss,css}\"",
    "lint:fmt:fix": "prettier --write .",
    "lint:types": "tsc --noEmit --project tsconfig.json",
    "analyze": "cem analyze --litelement --globs 'src/**/index.ts' --exclude 'src/**/*.stories.ts'",
    "analyze:watch": "cem analyze --litelement --globs 'src/**/index.ts' --exclude 'src/**/*.stories.ts' --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "yarn build && storybook build",
    "test-storybook": "yarn config-prepare && test-storybook",
    "test": "yarn analyze && yarn config-prepare && yarn build && yarn build-storybook && concurrently -k -s first -n 'SB,TEST' -c 'magenta,blue' 'http-server storybook-static --port 6007' 'wait-on -v tcp:127.0.0.1:6007 && yarn test-storybook --url http://127.0.0.1:6007'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "prettier --list-different",
      "eslint"
    ],
    "*.json": "prettier --list-different",
    "*.ya?ml": "prettier --list-different",
    "*.{scss,css,vue}": [
      "prettier --list-different",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@custom-elements-manifest/analyzer": "^0.8.0",
    "@lit-labs/motion": "^1.0.3",
    "@storybook/addon-controls": "^7.0.7",
    "@storybook/addon-essentials": "^7.0.7",
    "@storybook/addon-interactions": "^7.0.7",
    "@storybook/addon-links": "^7.0.7",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/blocks": "^7.0.7",
    "@storybook/builder-vite": "^7.0.7",
    "@storybook/client-api": "^7.0.7",
    "@storybook/jest": "^0.1.0",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/test-runner": "^0.10.0",
    "@storybook/testing-library": "^0.1.0",
    "@storybook/web-components-vite": "^7.0.7",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "dompurify": "^3.0.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-lit": "^1.8.3",
    "espree": "^9.5.1",
    "ethereum-blockies-base64": "^1.0.2",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "list-exports": "^1.1.0",
    "lit": "^2.7.2",
    "lit-analyzer": "^1.2.1",
    "lit-html": "^2.7.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.32.3",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "renamer": "^4.0.0",
    "sass": "^1.62.0",
    "storybook": "7.0.7",
    "storybook-addon-designs": "^7.0.0-beta.2",
    "stylelint": "^15.6.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-prettier": "^3.0.0",
    "tailwindcss": "^3.3.1",
    "tinycolor2": "^1.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "typescript-bundle": "^1.0.18",
    "vite": "^4.3.1",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-external": "^1.2.8",
    "vite-plugin-static-copy": "^0.14.0",
    "wait-on": "^7.0.1",
    "yargs": "^17.7.1"
  },
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "./package"
  ]
}
