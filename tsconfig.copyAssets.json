{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./tools",
    "outFile": "./tools/copy-assets.cjs",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@/shared/directives": ["./src/shared/directives"],
    }
  },
  "files": ["./src/shared/utils/copy-assets.ts"],
  "exclude": ["./node_modules"]
}
