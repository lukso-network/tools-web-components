{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": ".work",
    "baseUrl": "."
  },
  "include": [
    "src",
    "dist",
    "vite.config.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}