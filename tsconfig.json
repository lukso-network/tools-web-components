{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "outDir": ".work"
  },
  "include": [
    "src/**/*",
    "src/**/index.*",
    "dist/**/*",
    "vite.full.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}