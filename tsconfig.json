{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": ".work",
    "baseUrl": "src"
  },
  "include": [
    "./src",
    "./vite.config.ts",
    "./tailwind.config.cjs",
    "./postcss.config.cjs"
  ],
  "exclude": ["./node_modules"]
}
