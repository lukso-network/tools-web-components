{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/shared/directives": ["./src/shared/directives"],
    },
  },
  "include": [
    "src",
    "vite.full.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
