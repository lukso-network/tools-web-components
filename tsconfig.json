{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "types": ["vite/client", "node"],
    "target": "esnext",
    "module": "esnext",
    "outDir": "./dist",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/shared/directives": ["./src/shared/directives"],
    },
  },
  "include": [
    "src",
    "vite.full.config.ts",
    "vite.tools.config.ts",
    "vitest.config.ts",
    "storybook-static/directives"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
